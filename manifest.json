{
  "manifest_version": 3,
  "name": "Append Hostname to Title",
  "version": "1.1.2",
  "description": "Appends the hostname to every website's title.",
  "author": "Siddhartha Sahu",
  "homepage_url": "https://github.com/sdht0/append-hostname-to-title",
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Append Hostname"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{ec2a1448-da02-4474-ac79-8f554fea280f}"
    }
  }
}
